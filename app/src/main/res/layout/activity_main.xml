<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.taegyunkim.qrcode.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/detectQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="detectClick"
            android:text="Detect QR Code"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="230dp" />
        <Button
            android:id="@+id/generateQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="generateClick"
            android:text="Detect QR Code"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="230dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_generated_qrcode"/>
    </LinearLayout>
</LinearLayout>
