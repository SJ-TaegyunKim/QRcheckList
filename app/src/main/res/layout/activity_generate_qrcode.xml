<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/relativeLayOut"
    tools:context=".GenerateQR.GenerateQRcode">


    <Spinner
        android:id="@+id/spinnerinChangeColumn"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_generatorQR"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerinChangeColumn"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nanumsbold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_color_shape"
        android:text="QR 코드 생성" />

    <ImageView
        android:id="@+id/iv_generated_qrcode"
        android:layout_below="@+id/btn_generatorQR"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_saveQR"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_generated_qrcode"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nanumsbold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_color_shape"
        android:text="QR 코드 저장" />
</RelativeLayout>