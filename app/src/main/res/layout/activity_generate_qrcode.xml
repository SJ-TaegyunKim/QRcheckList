<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/relativeLayOut"
    tools:context=".GenerateQR.GenerateQRcode">

    <EditText
        android:id="@+id/edit_QRtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:ems="20"
        android:hint="추가하실 기계명을 입력하세요"/>

    <Button
        android:id="@+id/btn_generatorQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_QRtext"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:text="generate QR Code" />

    <ImageView
        android:id="@+id/iv_generated_qrcode"
        android:layout_below="@+id/btn_generatorQR"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_saveQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_generated_qrcode"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Save QR Code" />
</RelativeLayout>