<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/splash_appname_ImageView"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@+id/splash_logo_imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/appname"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/splash_logo_imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/splashicon"
        android:contentDescription="@drawable/splashicon"/>

</RelativeLayout>
