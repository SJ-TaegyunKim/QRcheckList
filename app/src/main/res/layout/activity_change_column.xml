<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/relativeLayOutinChangeColumn"
    tools:context=".SQLite.ChangeColumn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerinChangeColumn"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editTextinChangeColumn"
            android:ems="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewinChangeColumn"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nanumsbold"
            android:textSize="15dp"
            android:hint="수정될 점검 항목명을 입력해주세요." />

        <Button
            android:id="@+id/buttoninChangeColumn"
            android:layout_width="250dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/spinnerinChangeColumn"
            android:fontFamily="@font/nanumsbold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_color_shape"
            android:text="변경" />

    </LinearLayout>
</RelativeLayout>